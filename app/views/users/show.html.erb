
<div class="col-md-2"></div>
<div class="col-md-8 center profile">
<div class="profile-form">
<h1><%= @user.first_name %> <%= @user.last_name %></h1>

<% flash.each do |k, v| %>
  <h4 id="<%= k %>"><%= v %></h4>
<% end %>

<% if @price_queries.length < 1 %>
  <h3>No Saved Places Yet</h3>
<% else %>
  <h3>Saved Places</h3>
	<% @price_queries.each do |query| %>
	  <p><a href="/users/<%= @user.id %>/places/<%= query.id %>"> "<%= query.nickname %>," <%= query.city %> </a> </p>
	<% end %>
<% end %>

<%= button_to "Add a new place", new_place_path(@user.id), method: :get, class: "btn btn-default"  %>

<br/><br/><br/>

<%= button_to "Edit Profile", edit_user_path(@user.id), method: :get, class: "btn btn-primary" %>
<br/>
<%= button_to "Delete Profile", user_path(@user.id), method: :delete, class: "btn btn-danger" %>
</div>
</div>
<div class="col-md-2"></div>

